@model DashMq.Web.Features.Datapoints.DatapointModel

@{
    ViewBag.Title = "New Datapoint";
    Layout = "_Layout";
}

<h2>New Datapoint</h2>

<form asp-action="New" method="post" class="form-horizontal">
    <div class="mb-3">
        <label for="Name" class="form-label">Name:</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name"/>
    </div>

    <div class="mb-3">
        <label for="Topic">Topic:</label>
        <input type="text" class="form-control" id="Topic" name="Topic" value="@Model.Topic"/>
    </div>

    <div class="d-grid gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
</form>